@page "/"
@inject NavigationManager Navigation
@rendermode InteractiveServer
<PageTitle>Home</PageTitle>




<div class="container border-top border-bottom border-dark pb-5" style="height: 400px;">
    <div class="d-flex flex-row justify-content-center m-auto">
        <div class="d-flex flex-column item">
            <h1 class="fw-bold">Welcome to the Book Collect</h1>
            <p class="">We have a wide range of novels for you to enjoy!</p>
        </div>
        <div class="item">
            <img class=" image" src="/Assets/open-book-icon-32.png" asp-append-version="true" />
        </div>
    </div>
</div>

<div class="container border-bottom border-dark pb-3 pt-3" style="height: 250px;">
    <div id="carouselExampleIndicators" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="/Assets/open-book-icon-32.png" class="d-block image m-auto" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/Assets/open-book-icon-32.png" class="d-block image m-auto" alt="...">
            </div>
            <div class="carousel-item">
                <img src="/Assets/open-book-icon-32.png" class="d-block image m-auto" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="prev">
            <span class="carousel-control-prev-icon btn-dark" style="border-radius: 10px; width: 50px; height: 50px; padding: 20px;" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators" data-bs-slide="next">
            <span class="carousel-control-next-icon btn-dark" style="border-radius: 10px; width: 50px; height: 50px; padding: 20px;" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>






