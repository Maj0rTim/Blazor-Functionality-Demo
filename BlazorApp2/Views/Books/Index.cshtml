@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<BlazorApp2.Models.Book>
@{
    ViewData["Title"] = "Index";
    Layout = "";
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <base href="/" />
    <link rel="stylesheet" href="bootstrap/bootstrap.min.css" />
    <link rel="stylesheet" href="BlazorApp2.styles.css" />
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
          crossorigin="anonymous">
    <link rel="stylesheet" href="app.css" />
    <HeadOutlet />
</head>

<div class="container p-5">
    <div class="position-absolute float-start">
        <a href="/" class="btn btn-dark">Home</a>
        <a asp.action="Create" href="/Books/Create" class="btn btn-dark">Add Book</a>
    </div>
    <h2 class="text-center">Search for the perfect book!</h2>
    <div class="d-flex flex-row align-items-center justify-content-center">
        <div class="w-50">
            <input class="form-control form-control border-1 border-dark" type="text" 
                placeholder="Title...." aria-label=".form-control-lg example">
        </div>
        <div class="m-2">
            <button type="button" class="btn btn-dark">
                <span class="material-symbols-outlined">
                    search
                </span>
            </button>
        </div>
    </div>
    <div class="d-flex flex-row justify-content-center pb-5 border-bottom ">
        <select class="form-select m-2" aria-label=".form-select example" style="width: 150px">
            <option selected>Genre</option>
            <option value="1">Default</option>
            <option value="2">Crime</option>
            <option value="3">Fantasy</option>
            <option value="3">Horror</option>
        </select>
        <select class="form-select m-2" aria-label=".form-select example" style="width: 150px">
            <option selected>Page Length</option>
            <option value="1">1000 +</option>
            <option value="2">600 - 100</option>
            <option value="3">300 - 600</option>
        </select>
        <select class="form-select m-2" aria-label=".form-select example" style="width: 150px">
            <option selected>Rating</option>
            <option value="1">4 - 5</option>
            <option value="2">3 - 4</option>
            <option value="3">2 - 3</option>
            <option value="3">1 - 2</option>
        </select>
    </div>
</div>

<div class="container-fluid">
    <div class="d-flex flex-row flex-wrap justify-content-evenly">
        @foreach (var item in Model)
        {
            <div class="card p-1 m-2" style="width: 18rem;">
                <img src="/Assets/open-book-icon-32.png" class="card-img-top image" alt="...">
                <div class="card-body">
                    <h5 class="card-title mb-2">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <h6 class="card-subtitle mb-2 text-body-secondary">Book Genre Here</h6>
                    <p class="card-text mb-2">Book Description Here</p>
                    <a asp-action="Edit" asp-route-id="@item.BookID">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.BookID">Delete</a>
                </div>
            </div>
        }
    </div>

</div>
